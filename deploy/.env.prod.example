# SleepCore Production Environment Variables
# Copy this file to .env and fill in the values
#
# IMPORTANT: Never commit .env file to version control!

# ============================================
# Domain Configuration
# ============================================
DOMAIN=sleepcore.app

# ============================================
# GitHub Container Registry
# ============================================
GITHUB_REPOSITORY=your-org/sleepcore

# ============================================
# Service Versions (set by deployment script)
# ============================================
BOT_VERSION=latest
API_VERSION=latest
MINIAPP_VERSION=latest

# ============================================
# Telegram Bot
# ============================================
BOT_TOKEN=your-telegram-bot-token

# ============================================
# Database
# ============================================
POSTGRES_DB=sleepcore
POSTGRES_USER=sleepcore
POSTGRES_PASSWORD=your-secure-password-here

# Connection string for services
DATABASE_URL=postgresql://sleepcore:your-secure-password-here@postgres:5432/sleepcore

# ============================================
# API Security
# ============================================
JWT_SECRET=your-jwt-secret-min-32-characters
CORS_ORIGIN=https://app.sleepcore.app

# ============================================
# AI Services (Optional)
# ============================================
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# ============================================
# Traefik Dashboard
# ============================================
# Generate with: htpasswd -nb admin password
TRAEFIK_DASHBOARD_AUTH=admin:$$apr1$$...

# ============================================
# Grafana
# ============================================
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your-grafana-password

# ============================================
# Feature Flags
# ============================================
ENABLE_ENHANCED_BOT=true
ENABLE_AI_INTELLIGENCE_HUB=false
ENABLE_ANIMATIONS=false
