# ============================================================================
# SleepCore Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ============================================================================
# REQUIRED: Telegram Bot
# ============================================================================
# Get from @BotFather on Telegram
BOT_TOKEN=your_telegram_bot_token_here

# ============================================================================
# REQUIRED: Database
# ============================================================================
DATABASE_PATH=./data/sleepcore.db
NODE_ENV=development

# ============================================================================
# REQUIRED FOR PRODUCTION: Encryption (HIPAA/GDPR Compliance)
# ============================================================================
# Generate with: openssl rand -hex 32
# This key encrypts all PHI data at rest (AES-256-GCM)
# CRITICAL: Store securely, losing this key = losing all encrypted data
ENCRYPTION_MASTER_KEY=

# ============================================================================
# REQUIRED FOR PRODUCTION: Backup Encryption
# ============================================================================
# Generate with: openssl rand -hex 32
# Separate key for backup encryption
BACKUP_ENCRYPTION_KEY=

# ============================================================================
# OPTIONAL: Sentry Monitoring
# ============================================================================
SENTRY_DSN=
SENTRY_ENABLED=true
SENTRY_TRACES_SAMPLE_RATE=0.2
SENTRY_PROFILES_SAMPLE_RATE=1.0
# Salt for anonymizing user IDs in error reports
SENTRY_USER_SALT=

# ============================================================================
# OPTIONAL: OpenAI (Voice transcription)
# ============================================================================
OPENAI_API_KEY=

# ============================================================================
# OPTIONAL: Health Check Server
# ============================================================================
HEALTH_PORT=3002

# ============================================================================
# OPTIONAL: Backup Configuration
# ============================================================================
BACKUP_DIR=./backups
BACKUP_ENCRYPT=true
BACKUP_RETENTION_DAYS=30

# ============================================================================
# OPTIONAL: PostgreSQL (for production scaling)
# ============================================================================
# PGHOST=localhost
# PGPORT=5432
# PGDATABASE=sleepcore
# PGUSER=postgres
# PGPASSWORD=
