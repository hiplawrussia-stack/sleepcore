# SleepCore API Configuration
# ===========================

# Server
PORT=3001
HOST=0.0.0.0
NODE_ENV=development

# Telegram Bot Token (required)
BOT_TOKEN=your_bot_token_here

# JWT Secret (optional, defaults to BOT_TOKEN)
JWT_SECRET=your_jwt_secret_here

# Database path
DATABASE_PATH=./database/api.db

# CORS origin (Mini App URL)
CORS_ORIGIN=*
